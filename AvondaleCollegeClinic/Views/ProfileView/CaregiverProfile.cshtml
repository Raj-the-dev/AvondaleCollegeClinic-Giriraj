@model AvondaleCollegeClinic.Models.Caregiver
@{
    ViewData["Title"] = "My Caregiver Profile";
}
<section class="wrap page">
    <div class="eyebrow">Profile</div>
    <h1>My Caregiver Profile</h1>

    <div class="profile-card">
        <img src="@(string.IsNullOrWhiteSpace(Model.ImagePath) ? "/images/placeholder-user.png" : Model.ImagePath)"
             alt="@Model.FirstName @Model.LastName"
             class="profile-image" />

        <div class="profile-info">
            <div class="profile-line"><span>Caregiver ID:</span><span>@Model.CaregiverID</span></div>
            <div class="profile-line"><span>First Name:</span><span>@Model.FirstName</span></div>
            <div class="profile-line"><span>Last Name:</span><span>@Model.LastName</span></div>
            <div class="profile-line"><span>Relationship:</span><span>@Model.Relationship</span></div>
            <div class="profile-line"><span>Email:</span><span>@Model.Email</span></div>
            <div class="profile-line"><span>Phone:</span><span>@Model.Phone</span></div>
        </div>

        @if (Model.Students != null && Model.Students.Any())
        {
            <hr style="margin:24px 0" />
            <h3 style="font-size:16px;font-weight:600;margin-bottom:10px;">Linked Students</h3>
            <div class="profile-info">
                @foreach (var s in Model.Students)
                {
                    <div class="profile-line"><span>@s.StudentID</span><span>@s.FirstName @s.LastName</span></div>
                }
            </div>
        }
    </div>
</section>
