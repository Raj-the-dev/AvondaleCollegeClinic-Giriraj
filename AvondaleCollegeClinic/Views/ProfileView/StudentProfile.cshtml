@model AvondaleCollegeClinic.Models.Student
@{
    ViewData["Title"] = "My Student Record";
}
<section class="wrap page">
    <div class="eyebrow">Profile</div>
    <h1>My Student Record</h1>

    <div class="grid" style="grid-template-columns:repeat(12,1fr);gap:20px">
        <div class="tile span-6">
            <div>
                <h3>Details</h3>
                <dl class="desc-list">
                    <dt>Student ID</dt>
                    <dd>@Model.StudentID</dd>
                    <dt>Name</dt>
                    <dd>@Model.FirstName @Model.LastName</dd>
                    <dt>Date of Birth</dt>
                    <dd>@Model.DOB.ToShortDateString()</dd>
                    <dt>Email</dt>
                    <dd>@Model.Email</dd>
                </dl>
            </div>
        </div>

        <div class="tile span-6">
            <div>
                <h3>Homeroom</h3>
                @if (Model.Homeroom is null)
                {
                    <div class="muted">Not assigned.</div>
                }
                else
                {
                    <dl class="desc-list">
                        <dt>Year</dt>
                        <dd>@((int)Model.Homeroom.YearLevel)</dd>
                        <dt>Block</dt>
                        <dd>@Model.Homeroom.Block</dd>
                        <dt>Class</dt>
                        <dd>@((int)Model.Homeroom.ClassNumber)</dd>
                        <dt>Teacher</dt>
                        <dd>@Model.Homeroom.Teacher?.FirstName @Model.Homeroom.Teacher?.LastName</dd>
                    </dl>
                }
            </div>
        </div>

        <div class="tile span-12">
            <div>
                <h3>Caregiver</h3>
                @if (Model.Caregiver is null)
                {
                    <div class="muted">No caregiver linked.</div>
                }
                else
                {
                    <dl class="desc-list">
                        <dt>Name</dt>
                        <dd>@Model.Caregiver.FirstName @Model.Caregiver.LastName</dd>
                        <dt>Relationship</dt>
                        <dd>@Model.Caregiver.Relationship</dd>
                        <dt>Email</dt>
                        <dd>@Model.Caregiver.Email</dd>
                        <dt>Phone</dt>
                        <dd>@Model.Caregiver.Phone</dd>
                    </dl>
                }
            </div>
        </div>
    </div>
</section>
