@model AvondaleCollegeClinic.Models.Teacher
@{
    ViewData["Title"] = "My Teacher Profile";
}
<section class="wrap page">
    <div class="eyebrow">Profile</div>
    <h1>My Teacher Profile</h1>

    <div class="profile-card">
        <img src="@(string.IsNullOrWhiteSpace(Model.ImagePath) ? "/images/placeholder-user.png" : Model.ImagePath)"
             alt="@Model.FirstName @Model.LastName"
             class="profile-image" />

        <div class="profile-info">
            <div class="profile-line"><span>Teacher ID:</span><span>@Model.TeacherID</span></div>
            <div class="profile-line"><span>First Name:</span><span>@Model.FirstName</span></div>
            <div class="profile-line"><span>Last Name:</span><span>@Model.LastName</span></div>
            <div class="profile-line"><span>Email:</span><span>@Model.Email</span></div>
            <div class="profile-line"><span>Teacher Code:</span><span>@Model.TeacherCode</span></div>
        </div>

        @if (Model.Homerooms != null && Model.Homerooms.Any())
        {
            <hr style="margin:24px 0" />
            <h3 style="font-size:16px;font-weight:600;margin-bottom:10px;">Assigned Homerooms</h3>
            <div class="profile-info">
                @foreach (var h in Model.Homerooms)
                {
                    <div class="profile-line"><span>Year @((int)h.YearLevel)</span><span>Block @h.Block • Class @((int)h.ClassNumber)</span></div>
                }
            </div>
        }
    </div>
</section>
