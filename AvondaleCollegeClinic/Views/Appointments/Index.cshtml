@model AvondaleCollegeClinic.Helpers.PaginatedList<AvondaleCollegeClinic.Models.Appointment>
@{
    ViewData["Title"] = "Appointments";
}

<section class="wrap page">
    <h2>Appointment</h2>

    <!-- Toolbar: search + create -->
    <form asp-action="Index" method="get" class="toolbar">
        <div class="left">
            <label for="search" class="form-label" style="margin:0">Search</label>
            <input id="search" type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" />
            <button type="submit" class="btn">Search</button>
            <a asp-action="Index" class="link-quiet">Clear</a>
        </div>
        <div class="right">
            <a asp-action="Create" class="btn">Create New</a>
        </div>
    </form>

    <table class="table-flat">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["DateSortParm"]"
                       asp-route-searchString="@ViewData["CurrentFilter"]">Appointment Date</a>
                </th>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["StatusSortParm"]"
                       asp-route-searchString="@ViewData["CurrentFilter"]">Status</a>
                </th>
                <th>@Html.DisplayNameFor(model => model[0].Reason)</th>
                <th>Student</th>
                <th>Doctor</th>
                <th class="actions">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.AppointmentDateTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>@Html.DisplayFor(modelItem => item.Reason)</td>
                    <td>@item.Student?.StudentID</td>
                    <td>@item.Doctor?.DoctorID</td>
                    <td class="actions">
                        <a asp-action="Edit" asp-route-id="@item.AppointmentID">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.AppointmentID">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.AppointmentID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Simple pager -->
    <div class="belt" style="padding-top:16px">
        <div>Page @Model.PageIndex of @Model.TotalPages</div>
        <div>
            @if (Model.HasPreviousPage)
            {
                <a class="link-quiet" asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">Previous</a>
            }
            @if (Model.HasNextPage)
            {
                <a class="link-quiet" style="margin-left:12px" asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">Next</a>
            }
        </div>
    </div>
</section>
