@model AvondaleCollegeClinic.Models.Appointment
@{
    ViewData["Title"] = "Delete Appointment";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>
    <p class="muted">Are you sure you want to delete this appointment?</p>

    <dl class="desc-list" style="margin-top:12px">
        <dt>When</dt>
        <dd>@Model.AppointmentDateTime.ToString("ddd, dd MMM yyyy • h:mm tt")</dd>

        <dt>Status</dt>
        <dd>@Model.Status</dd>

        <dt>Reason</dt>
        <dd>@Model.Reason</dd>

        <dt>Student</dt>
        <dd>@($"{Model.Student?.FirstName} {Model.Student?.LastName}")</dd>

        <dt>Doctor</dt>
        <dd>@($"{Model.Doctor?.FirstName} {Model.Doctor?.LastName}")</dd>
    </dl>

    <form asp-action="Delete" method="post" class="form-buttons">
        <input type="hidden" asp-for="AppointmentID" />
        <button type="submit" class="btn">Delete</button>
        <a asp-action="Index" class="link-quiet">Cancel</a>
    </form>
</section>
