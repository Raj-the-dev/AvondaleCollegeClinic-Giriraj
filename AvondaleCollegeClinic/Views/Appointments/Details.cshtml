@model AvondaleCollegeClinic.Models.Appointment
@{
    ViewData["Title"] = "Appointment Details";
}

<section class="wrap page">
    <h1>@ViewData["Title"]</h1>

    <dl class="desc-list">
        <dt>@Html.DisplayNameFor(m => m.AppointmentDateTime)</dt>
        <dd>@Html.DisplayFor(m => m.AppointmentDateTime)</dd>

        <dt>@Html.DisplayNameFor(m => m.Status)</dt>
        <dd>@Html.DisplayFor(m => m.Status)</dd>

        <dt>@Html.DisplayNameFor(m => m.Reason)</dt>
        <dd>@Html.DisplayFor(m => m.Reason)</dd>

        <dt>Student</dt>
        <dd>@Model.Student?.StudentID</dd>

        <dt>Doctor</dt>
        <dd>@Model.Doctor?.DoctorID</dd>
    </dl>

    <div class="form-buttons">
        <a asp-action="Edit" asp-route-id="@Model.AppointmentID" class="btn">Edit</a>
        <a asp-action="Index" class="link-quiet">Back to list</a>
    </div>
</section>
