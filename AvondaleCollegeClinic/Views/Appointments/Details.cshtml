@model AvondaleCollegeClinic.Models.Appointment
@{
    ViewData["Title"] = "Appointment Details";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>

    <dl class="desc-list">
        <dt>When</dt>
        <dd>@Model.AppointmentDateTime.ToString("ddd, dd MMM yyyy • h:mm tt")</dd>

        <dt>Status</dt>
        <dd>@Model.Status</dd>

        <dt>Reason</dt>
        <dd>@Model.Reason</dd>

        <dt>Student</dt>
        <dd>@($"{Model.Student?.FirstName} {Model.Student?.LastName}")</dd>

        <dt>Doctor</dt>
        <dd>@($"{Model.Doctor?.FirstName} {Model.Doctor?.LastName}")</dd>
    </dl>

    <div class="form-buttons">
        <a asp-action="Edit" asp-route-id="@Model.AppointmentID" class="btn">Edit</a>
        <a asp-action="Index" class="link-quiet">Back to list</a>
    </div>
</section>
