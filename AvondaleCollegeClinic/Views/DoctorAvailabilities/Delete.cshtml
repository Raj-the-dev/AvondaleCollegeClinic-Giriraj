@model AvondaleCollegeClinic.Models.DoctorAvailability
@{
    ViewData["Title"] = "Delete Availability";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>
    <p class="muted">Are you sure you want to delete this availability?</p>

    <dl class="desc-list" style="margin-top:12px">
        <dt>Date</dt>
        <dd>@Model.AvailableDate.ToShortDateString()</dd>
        <dt>Start</dt>
        <dd>@Model.StartTime.ToShortTimeString()</dd>
        <dt>End</dt>
        <dd>@Model.EndTime.ToShortTimeString()</dd>
        <dt>Doctor</dt>
        <dd>@Model.Doctor?.FirstName @Model.Doctor?.LastName (@Model.Doctor?.DoctorID)</dd>
    </dl>

    <form asp-action="Delete" method="post" class="form-buttons">
        <input type="hidden" asp-for="DoctorAvailabilityID" />
        <button type="submit" class="btn">Delete</button>
        <a asp-action="Index" class="link-quiet">Cancel</a>
    </form>
</section>
