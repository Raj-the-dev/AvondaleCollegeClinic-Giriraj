@model AvondaleCollegeClinic.Models.DoctorAvailability
@{
    ViewData["Title"] = "Create Availability";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>
    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

    <form asp-action="Create">
        <div class="form-row">
            <label asp-for="DoctorID" class="form-label">Doctor</label>
            <select asp-for="DoctorID" class="form-control" asp-items="ViewBag.DoctorID"></select>
            <span asp-validation-for="DoctorID" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="AvailableDate" class="form-label">Date</label>
            <input asp-for="AvailableDate" class="form-control" type="date" />
            <span asp-validation-for="AvailableDate" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="StartTime" class="form-label">Start time</label>
            <input asp-for="StartTime" class="form-control" type="time" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="EndTime" class="form-label">End time</label>
            <input asp-for="EndTime" class="form-control" type="time" />
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>

        <div class="form-buttons">
            <button type="submit" class="btn">Create</button>
            <a asp-action="Index" class="link-quiet">Back to list</a>
        </div>
    </form>
</section>

@section Scripts { @await Html.PartialAsync("_ValidationScriptsPartial") }
