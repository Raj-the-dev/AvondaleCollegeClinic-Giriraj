@model AvondaleCollegeClinic.Models.DoctorAvailability
@{
    ViewData["Title"] = "Availability Details";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>

    <dl class="desc-list">
        <dt>Date</dt>
        <dd>@Model.AvailableDate.ToShortDateString()</dd>
        <dt>Start</dt>
        <dd>@Model.StartTime.ToShortTimeString()</dd>
        <dt>End</dt>
        <dd>@Model.EndTime.ToShortTimeString()</dd>
        <dt>Doctor</dt>
        <dd>@Model.Doctor?.FirstName @Model.Doctor?.LastName (@Model.Doctor?.DoctorID)</dd>
    </dl>

    <div class="form-buttons">
        @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
        {
            <a asp-action="Edit" asp-route-id="@Model.DoctorAvailabilityID" class="btn">Edit</a>
        }
        <a asp-action="Index" class="link-quiet">Back to list</a>
    </div>
</section>
