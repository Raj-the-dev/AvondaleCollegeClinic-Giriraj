@using Microsoft.AspNetCore.Identity
@using AvondaleCollegeClinic.Areas.Identity.Data
@inject SignInManager<AvondaleCollegeClinicUser> SignInManager
@inject UserManager<AvondaleCollegeClinicUser> UserManager

<div class="auth-slot">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        var avatar = user?.AvatarPath;

        <span>
            @if (!string.IsNullOrEmpty(avatar))
            {
                <img src="@avatar" alt="avatar" width="28" height="28"
                     style="vertical-align:middle;border-radius:50%;object-fit:cover;margin-right:8px" />
            }
            <span class="muted" style="vertical-align:middle;margin-right:12px">
                @user?.FirstName @user?.LastName
            </span>
            <a href="/Identity/Account/Manage/CompleteProfile" style="margin-right:12px">Profile</a>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post" style="display:inline">
                <button type="submit" style="background:none;border:0;padding:0;margin:0;cursor:pointer">Logout</button>
            </form>
        </span>
    }
    else
    {
        <a href="/Identity/Account/Login">Login</a>
    }
</div>
