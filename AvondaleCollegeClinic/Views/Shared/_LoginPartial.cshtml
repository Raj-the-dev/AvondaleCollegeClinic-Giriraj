@using Microsoft.AspNetCore.Identity
@using AvondaleCollegeClinic.Areas.Identity.Data
@inject SignInManager<AvondaleCollegeClinicUser> SignInManager
@inject UserManager<AvondaleCollegeClinicUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        var avatar = user?.AvatarPath;

        <li class="nav-item d-flex align-items-center">
            @if (!string.IsNullOrEmpty(avatar))
            {
                <img src="@avatar" alt="avatar" class="rounded-circle me-2" width="32" height="32" />
            }
            <span class="navbar-text me-3">@user?.FirstName @user?.LastName</span>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/CompleteProfile">Profile</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index","Home")" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
