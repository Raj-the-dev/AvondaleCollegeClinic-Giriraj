@model AvondaleCollegeClinic.Models.Caregiver
@{
    ViewData["Title"] = "Caregiver Details";
}

<section class="wrap" style="padding:36px 0">
    <div class="eyebrow">CAREGIVERS</div>
    <h1>Details</h1>

    <div class="tile span-12" style="padding:26px; margin-top:12px">
        <dl class="row" style="margin:0">
            <dt class="col-sm-3 muted">First name</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3 muted">Last name</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3 muted">Photo</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="Caregiver photo" width="140" height="140" />
                }
                else
                {
                    <span class="muted">No image uploaded</span>
                }
            </dd>

            <dt class="col-sm-3 muted">Date of birth</dt>
            <dd class="col-sm-9">@Model.DOB.ToString("yyyy-MM-dd")</dd>   <!-- DateTime -->

            <dt class="col-sm-3 muted">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3 muted">Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3 muted">Relationship</dt>
            <dd class="col-sm-9">@Model.Relationship</dd>
        </dl>

        <div class="belt" style="padding-top:16px">
            <div></div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.CaregiverID">Edit</a>
                <span class="muted"> · </span>
                <a asp-action="Index">Back to list</a>
            </div>
        </div>
    </div>
</section>
