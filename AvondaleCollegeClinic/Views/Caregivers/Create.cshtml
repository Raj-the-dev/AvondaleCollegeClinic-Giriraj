@model AvondaleCollegeClinic.Models.Caregiver
@{
    ViewData["Title"] = "Create Caregiver";
}

<section class="wrap" style="padding:36px 0">
    <div class="eyebrow">CAREGIVERS</div>
    <h1>Create</h1>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="auth" style="max-width:720px">
        <div asp-validation-summary="ModelOnly" class="error-summary" role="alert"></div>
        <input type="hidden" asp-for="CaregiverID" />

        <div class="form-row">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="input-line" />
            <span asp-validation-for="FirstName" class="error-summary"></span>
        </div>

        <div class="form-row">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="input-line" />
            <span asp-validation-for="LastName" class="error-summary"></span>
        </div>

        <div class="form-row">
            <label asp-for="ImageFile">Upload image</label>
            <input asp-for="ImageFile" type="file" class="input-line" />
            <span asp-validation-for="ImageFile" class="error-summary"></span>
        </div>

        @{
            var today = DateTime.Today.ToString("yyyy-MM-dd");
        }
        <input asp-for="DOB" class="input-line" type="date" max="@today" />

        <div class="form-row">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="input-line" />
            <span asp-validation-for="Email" class="error-summary"></span>
        </div>

        <div class="form-row">
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="input-line" />
            <span asp-validation-for="Phone" class="error-summary"></span>
        </div>

        <div class="form-row">
            <label asp-for="Relationship"></label>
            <select asp-for="Relationship" class="input-line"
                    asp-items="Html.GetEnumSelectList<RelationshipType>()"></select>
            <span asp-validation-for="Relationship" class="error-summary"></span>
        </div>

        <div class="form-row">
            <button type="submit" class="btn">Create</button>
            <a asp-action="Index" class="link-quiet" style="margin-left:12px">Back to list</a>
        </div>
    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
