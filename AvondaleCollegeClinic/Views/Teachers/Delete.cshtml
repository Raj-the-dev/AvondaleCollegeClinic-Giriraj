@model AvondaleCollegeClinic.Models.Teacher
@{
    ViewData["Title"] = "Delete Teacher";
}

<section class="wrap" style="padding:36px 0">
    <div class="eyebrow">Teachers</div>
    <h1>Delete</h1>
    <p class="muted" style="margin-top:6px">Are you sure you want to delete this teacher?</p>

    <div class="tile span-12" style="padding:26px; margin-top:12px">
        <dl class="row" style="margin:0">
            <dt class="col-sm-3 muted">Name</dt>
            <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

            <dt class="col-sm-3 muted">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3 muted">Teacher code</dt>
            <dd class="col-sm-9">@Model.TeacherCode</dd>

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <dt class="col-sm-3 muted">Photo</dt>
                <dd class="col-sm-9"><img src="@Model.ImagePath" alt="Teacher photo" width="120" height="120" /></dd>
            }
        </dl>

        <form asp-action="Delete" method="post" class="auth" style="max-width:560px; margin-top:16px">
            <input type="hidden" asp-for="TeacherID" />
            <div class="form-row">
                <button type="submit" class="btn">Delete</button>
                <a asp-action="Index" class="link-quiet" style="margin-left:12px">Back to list</a>
            </div>
        </form>
    </div>
</section>
