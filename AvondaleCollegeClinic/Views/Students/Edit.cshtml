@model AvondaleCollegeClinic.Models.Student
@{
    ViewData["Title"] = "Edit Student";
}

<section class="wrap" style="padding:36px 0">
    <div class="eyebrow">Students</div>
    <h1>Edit</h1>

    <div asp-validation-summary="ModelOnly" class="error-summary" role="alert"></div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="auth" style="max-width:640px">
        <input type="hidden" asp-for="StudentID" />

        <div class="form-row">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="input-line" />
            <span asp-validation-for="FirstName" class="error-summary"></span>
        </div>

        <div class="form-row">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="input-line" />
            <span asp-validation-for="LastName" class="error-summary"></span>
        </div>

        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <div class="form-row">
                <img src="@Model.ImagePath" alt="Current photo" width="140" height="140" />
            </div>
        }

        <div class="form-row">
            <label asp-for="ImageFile">Replace photo (optional)</label>
            <input asp-for="ImageFile" type="file" class="input-line" />
            <span asp-validation-for="ImageFile" class="error-summary"></span>
        </div>

        <div class="form-row">
            <label asp-for="DOB"></label>
            <input asp-for="DOB" class="input-line" />
            <span asp-validation-for="DOB" class="error-summary"></span>
        </div>

        <div class="form-row">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="input-line" />
            <span asp-validation-for="Email" class="error-summary"></span>
        </div>

        <div class="form-row">
            <label asp-for="HomeroomID">Homeroom</label>
            <select asp-for="HomeroomID" class="input-line" asp-items="ViewBag.HomeroomID"></select>
            <span asp-validation-for="HomeroomID" class="error-summary"></span>
        </div>

        <div class="form-row">
            <label>Caregiver</label>
            <select name="caregiverId" class="input-line" asp-items="ViewBag.CaregiverID"></select>
            @* optional validation message slot *@
            <span class="error-summary">@Html.ValidationMessage("CaregiverID")</span>
        </div>

        <!-- Extra caregiver (optional) -->
        <div class="form-row">
            <label>Extra Caregiver (optional)</label>
            <select name="extraCaregiverId" class="input-line" asp-items="ViewBag.ExtraCaregiverID">
                <option value="">-- None --</option>
            </select>
        </div>


        <div class="form-row">
            <button type="submit" class="btn">Save</button>
            <a asp-action="Index" class="link-quiet" style="margin-left:12px">Back to list</a>
        </div>
    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
