@model AvondaleCollegeClinic.Models.Student
@{
    ViewData["Title"] = "Student Details";
}

<section class="wrap" style="padding:36px 0">
    <div class="eyebrow">Students</div>
    <h1>Details</h1>

    <div class="tile span-12" style="padding:26px; margin-top:12px">
        <dl class="row" style="margin:0">
            <dt class="col-sm-3 muted">Student ID</dt>
            <dd class="col-sm-9">@Model.StudentID</dd>

            <dt class="col-sm-3 muted">First name</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3 muted">Last name</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3 muted">DOB</dt>
            <dd class="col-sm-9">@Model.DOB</dd>

            <dt class="col-sm-3 muted">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3 muted">Homeroom</dt>
            <dd class="col-sm-9">@Model.Homeroom?.HomeroomID</dd>

            <dt class="col-sm-3 muted">Caregivers</dt>
            <dd class="col-sm-9">
                @if (Model.Caregivers != null && Model.Caregivers.Any())
                {
                    @string.Join(", ", Model.Caregivers.Select(c => $"{c.CaregiverID} - {c.FirstName} {c.LastName}"))
                }
                else
                {
                    <span class="text-muted">None linked</span>
                }
            </dd>


            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <dt class="col-sm-3 muted">Photo</dt>
                <dd class="col-sm-9"><img src="@Model.ImagePath" alt="Student photo" width="140" height="140" /></dd>
            }
        </dl>

        <div class="belt" style="padding-top:16px">
            <div></div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.StudentID">Edit</a>
                <span class="muted"> · </span>
                <a asp-action="Index">Back to list</a>
            </div>
        </div>
    </div>
</section>
