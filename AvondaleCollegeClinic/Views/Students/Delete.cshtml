@model AvondaleCollegeClinic.Models.Student
@{
    ViewData["Title"] = "Delete Student";
}

<section class="wrap" style="padding:36px 0">
    <div class="eyebrow">Students</div>
    <h1>Delete</h1>
    <p class="muted" style="margin-top:6px">Are you sure you want to delete this student?</p>

    <div class="tile span-12" style="padding:26px; margin-top:12px">
        <dl class="row" style="margin:0">
            <dt class="col-sm-3 muted">Student ID</dt>
            <dd class="col-sm-9">@Model.StudentID</dd>

            <dt class="col-sm-3 muted">Name</dt>
            <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

            <dt class="col-sm-3 muted">DOB</dt>
            <dd class="col-sm-9">@Model.DOB</dd>

            <dt class="col-sm-3 muted">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3 muted">Homeroom</dt>
            <dd class="col-sm-9">@Model.Homeroom?.HomeroomID</dd>

            <dt class="col-sm-3 muted">Caregivers</dt>
            <dd class="col-sm-9">
                @if (Model.Caregivers?.Any() == true)
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var c in Model.Caregivers)
                        {
                            <li>@c.FirstName @c.LastName (@c.CaregiverID)</li>
                        }
                    </ul>
                }
                else
                {
                    <span class="text-muted">None linked</span>
                }
            </dd>

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <dt class="col-sm-3 muted">Photo</dt>
                <dd class="col-sm-9"><img src="@Model.ImagePath" alt="Student photo" width="120" height="120" /></dd>
            }
        </dl>

        <form asp-action="Delete" method="post" class="auth" style="max-width:560px; margin-top:16px">
            <input type="hidden" asp-for="StudentID" />
            <div class="form-row">
                <button type="submit" class="btn">Delete</button>
                <a asp-action="Index" class="link-quiet" style="margin-left:12px">Back to list</a>
            </div>
        </form>
    </div>
</section>
