@model AvondaleCollegeClinic.Models.Doctor
@{
    ViewData["Title"] = "Doctor Details";
}

<section class="wrap" style="padding:36px 0">
    <div class="eyebrow">DOCTORS</div>
    <h1>Details</h1>

    <div class="tile span-12" style="padding:26px; margin-top:12px">
        <dl class="row" style="margin:0">
            <dt class="col-sm-3 muted">First name</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3 muted">Last name</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3 muted">Specialization</dt>
            <dd class="col-sm-9">@Model.Specialization</dd>

            <dt class="col-sm-3 muted">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>


            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <dt class="col-sm-3 muted">Photo</dt>
                <dd class="col-sm-9"><img src="@Model.ImagePath" alt="Doctor photo" width="140" height="140" /></dd>
            }
        </dl>

        <div class="belt" style="padding-top:16px">
            <div></div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.DoctorID">Edit</a>
                <span class="muted"> · </span>
                <a asp-action="Index">Back to list</a>
            </div>
        </div>
    </div>
</section>
