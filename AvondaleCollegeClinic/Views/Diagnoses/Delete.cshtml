@model AvondaleCollegeClinic.Models.Diagnosis
@{
    ViewData["Title"] = "Delete Diagnosis";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>
    <p class="muted">Are you sure you want to delete this diagnosis?</p>

    <dl class="desc-list" style="margin-top:12px">
        <dt>@Html.DisplayNameFor(m => m.Description)</dt>
        <dd>@Html.DisplayFor(m => m.Description)</dd>

        <dt>@Html.DisplayNameFor(m => m.DateDiagnosed)</dt>
        <dd>@Html.DisplayFor(m => m.DateDiagnosed)</dd>

        <dt>Appointment</dt>
        <dd>@Model.Appointment?.AppointmentID</dd>
    </dl>

    <form asp-action="Delete" method="post" class="form-buttons">
        <input type="hidden" asp-for="DiagnosisID" />
        <button type="submit" class="btn">Delete</button>
        <a asp-action="Index" class="link-quiet">Cancel</a>
    </form>
</section>