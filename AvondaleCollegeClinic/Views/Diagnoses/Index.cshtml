@model AvondaleCollegeClinic.Helpers.PaginatedList<AvondaleCollegeClinic.Models.Diagnosis>
@{
    ViewData["Title"] = "Diagnoses";
}
<section class="wrap page">
    <h2>Diagnoses</h2>

    <!-- Toolbar: search + create -->
    <form asp-action="Index" method="get" class="toolbar">
        <div class="left">
            <label for="search" class="form-label" style="margin:0">Search</label>
            <input id="search" type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" />
            <button type="submit" class="btn">Search</button>
            <a asp-action="Index" class="link-quiet">Clear</a>
        </div>
        <div class="right">
            @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
            {
                <a asp-action="Create" class="btn">Create New</a>
            }
        </div>
    </form>

    <table class="table-flat">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m[0].Description)</th>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["DateSortParm"]"
                       asp-route-searchString="@ViewData["CurrentFilter"]">
                        Date Diagnosed
                    </a>
                </th>
                <th>Student</th>
                <th>Doctor</th>
                @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
                {
                    <th class="actions">Actions</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Description</td>
                    <td>@item.DateDiagnosed.ToShortDateString()</td>
                    <td>
                        @(item.Appointment?.Student != null
                            ? item.Appointment.Student.FirstName + " " + item.Appointment.Student.LastName
                            : "—")
                    </td>
                    <td>
                        @(item.Appointment?.Doctor != null
                            ? item.Appointment.Doctor.FirstName + " " + item.Appointment.Doctor.LastName
                            : "—")
                    </td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
                    {
                        <td class="actions">
                            <a asp-action="Details" asp-route-id="@item.DiagnosisID">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.DiagnosisID">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.DiagnosisID">Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>

    <!-- Simple pager -->
    <div class="belt" style="padding-top:16px">
        <div>Page @Model.PageIndex of @Model.TotalPages</div>
        <div>
            @if (Model.HasPreviousPage)
            {
                <a class="link-quiet" asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">Previous</a>
            }
            @if (Model.HasNextPage)
            {
                <a class="link-quiet" style="margin-left:12px" asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">Next</a>
            }
        </div>
    </div>
</section>
