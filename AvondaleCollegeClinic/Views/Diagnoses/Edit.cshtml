@model AvondaleCollegeClinic.Models.Diagnosis
@{
    ViewData["Title"] = "Edit Diagnosis";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>

    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

    <form asp-action="Edit">
        <input type="hidden" asp-for="DiagnosisID" />

        <div class="form-row">
            <label asp-for="AppointmentID" class="form-label"></label>
            <select asp-for="AppointmentID" class="form-control" asp-items="ViewBag.AppointmentID"></select>
            <span asp-validation-for="AppointmentID" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        @{
            var today = DateTime.Today.ToString("yyyy-MM-dd");
        }
        <input asp-for="DateDiagnosed" class="form-control" type="date" max="@today" />

        <div class="form-buttons">
            <button type="submit" class="btn">Save</button>
            <a asp-action="Index" class="link-quiet">Back to list</a>
        </div>
    </form>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}