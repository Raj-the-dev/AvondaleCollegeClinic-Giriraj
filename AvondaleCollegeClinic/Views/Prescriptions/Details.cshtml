@model AvondaleCollegeClinic.Models.Prescription
@{
    ViewData["Title"] = "Prescription Details";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>

    <dl class="desc-list">
        <dt>@Html.DisplayNameFor(m => m.Medication)</dt>
        <dd>@Html.DisplayFor(m => m.Medication)</dd>

        <dt>@Html.DisplayNameFor(m => m.Dosage)</dt>
        <dd>@Html.DisplayFor(m => m.Dosage)</dd>

        <dt>@Html.DisplayNameFor(m => m.StartDate)</dt>
        <dd>@Html.DisplayFor(m => m.StartDate)</dd>

        <dt>@Html.DisplayNameFor(m => m.EndDate)</dt>
        <dd>@Html.DisplayFor(m => m.EndDate)</dd>

        <dt>Student</dt>
        <dd>
            @(Model.Diagnosis?.Appointment?.Student != null
                ? Model.Diagnosis.Appointment.Student.FirstName + " " + Model.Diagnosis.Appointment.Student.LastName
                : "—")
        </dd>

        <dt>Doctor</dt>
        <dd>
            @(Model.Diagnosis?.Appointment?.Doctor != null
                ? Model.Diagnosis.Appointment.Doctor.FirstName + " " + Model.Diagnosis.Appointment.Doctor.LastName
                : "—")
        </dd>
    </dl>

    <div class="form-buttons">
        <a asp-action="Edit" asp-route-id="@Model.PrescriptionID" class="btn">Edit</a>
        <a asp-action="Index" class="link-quiet">Back to list</a>
    </div>
</section>
