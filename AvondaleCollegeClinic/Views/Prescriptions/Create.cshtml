@model AvondaleCollegeClinic.Models.Prescription
@{
    ViewData["Title"] = "Create Prescription";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>

    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

    <form asp-action="Create">
        <div class="form-row">
            <label asp-for="DiagnosisID" class="form-label"></label>
            <select asp-for="DiagnosisID" class="form-control" asp-items="ViewBag.DiagnosisID"></select>
            <span asp-validation-for="DiagnosisID" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="Medication" class="form-label"></label>
            <input asp-for="Medication" class="form-control" />
            <span asp-validation-for="Medication" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="Dosage" class="form-label"></label>
            <input asp-for="Dosage" class="form-control" />
            <span asp-validation-for="Dosage" class="text-danger"></span>
        </div>

        @{
            var today = DateTime.Today.ToString("yyyy-MM-dd");
        }

        <div class="form-row">
            <label asp-for="StartDate" class="form-label"></label>
            <input asp-for="StartDate" class="form-control" type="date" id="prescStart" max="@today" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="EndDate" class="form-label"></label>
            <input asp-for="EndDate" class="form-control" type="date" id="prescEnd" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>

        <div class="form-buttons">
            <button type="submit" class="btn">Create</button>
            <a asp-action="Index" class="link-quiet">Back to list</a>
        </div>
    </form>
</section>

@section Scripts {
    <script>
        // when Start changes, End cannot be before Start
        const s = document.getElementById('prescStart');
        const e = document.getElementById('prescEnd');
        if (s && e) {
            const sync = () => { e.min = s.value || ''; if (e.value && s.value && e.value < s.value) e.value = ''; };
            s.addEventListener('change', sync);
            document.addEventListener('DOMContentLoaded', sync);
        }
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
