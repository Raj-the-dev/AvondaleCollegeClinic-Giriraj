@model AvondaleCollegeClinic.Helpers.PaginatedList<AvondaleCollegeClinic.Models.Labtest>
@{
    ViewData["Title"] = "Lab Tests";
}
<section class="wrap page">
    <h2>Lab Tests</h2>

    <!-- Toolbar: search + create -->
    <form asp-action="Index" method="get" class="toolbar">
        <div class="left">
            <label for="search" class="form-label" style="margin:0">Search</label>
            <input id="search" type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" />
            <button type="submit" class="btn">Search</button>
            <a asp-action="Index" class="link-quiet">Clear</a>
        </div>
        <div class="right">
            @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
            {
                <a asp-action="Create" class="btn">Create New</a>
            }
        </div>
    </form>

    <table class="table-flat">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["TestSortParm"]"
                       asp-route-searchString="@ViewData["CurrentFilter"]">
                        Test Type
                    </a>
                </th>
                <th>Report</th>
                <th>@Html.DisplayNameFor(model => model[0].ResultDate)</th>
                <th>Medical Record</th>
                <div class="actions">
                    @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
                    {
                    <th class="actions">Actions</th>
                    }
                </div>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(_ => item.TestType)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.File))
                        {
                            <a href="@item.File" target="_blank" rel="noopener">Open PDF</a>
                        }
                        else
                        {
                            <span class="muted">No PDF</span>
                        }
                    </td>
                    <td>@item.ResultDate.ToShortDateString()</td>
                    <td>@item.MedicalRecord?.MedicalRecordID</td>
                    <td class="actions">
                        @if (User.IsInRole("Admin") || User.IsInRole("Doctor"))
                        {
                            <a asp-action="Details" asp-route-id="@item.LabtestID">Details</a>

                            <a asp-action="Edit" asp-route-id="@item.LabtestID">Edit</a>



                            <a asp-action="Delete" asp-route-id="@item.LabtestID">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Simple pager -->
    <div class="belt" style="padding-top:16px">
        <div>Page @Model.PageIndex of @Model.TotalPages</div>
        <div>
            @if (Model.HasPreviousPage)
            {
                <a class="link-quiet" asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">Previous</a>
            }
            @if (Model.HasNextPage)
            {
                <a class="link-quiet" style="margin-left:12px" asp-action="Index"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-searchString="@ViewData["CurrentFilter"]">Next</a>
            }
        </div>
    </div>
</section>
