@model AvondaleCollegeClinic.Models.Labtest
@{
    ViewData["Title"] = "Create Lab Test";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>

    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

    <form asp-action="Create" enctype="multipart/form-data">
        <div class="form-row">
            <label asp-for="RecordID" class="form-label"></label>
            <select asp-for="RecordID" class="form-control" asp-items="ViewBag.RecordID"></select>
            <span asp-validation-for="RecordID" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="TestType" class="form-label"></label>
            <input asp-for="TestType" class="form-control" required/>
            <span asp-validation-for="TestType" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="PDFFile" class="form-label">Lab Report (PDF)</label>
            <input asp-for="PDFFile" type="file" accept="application/pdf,.pdf" class="form-control" required/>
            <span asp-validation-for="PDFFile" class="text-danger"></span>
        </div>

        @{
            var today = DateTime.Today.ToString("yyyy-MM-dd");
        }
        <input asp-for="ResultDate" class="form-control" type="date" max="@today" required/>

        <div class="form-buttons">
            <button type="submit" class="btn">Create</button>
            <a asp-action="Index" class="link-quiet">Back to list</a>
        </div>
    </form>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
