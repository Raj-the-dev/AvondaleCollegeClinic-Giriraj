@model AvondaleCollegeClinic.Models.Labtest
@{
    ViewData["Title"] = "Lab Test Details";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>

    <dl class="desc-list">
        <dt>@Html.DisplayNameFor(m => m.TestType)</dt>
        <dd>@Html.DisplayFor(m => m.TestType)</dd>

        <dt>Report</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.File))
            {
                <p><a href="@Model.File" target="_blank" rel="noopener">Open PDF</a></p>
                <iframe src="@Model.File" width="100%" height="600" style="border:0;"></iframe>
            }
            else
            {
                <span class="muted">No PDF uploaded</span>
            }
        </dd>

        <dt>@Html.DisplayNameFor(m => m.ResultDate)</dt>
        <dd>@Html.DisplayFor(m => m.ResultDate)</dd>

        <dt>Medical Record</dt>
        <dd>@Model.MedicalRecord?.MedicalRecordID</dd>
    </dl>

    <div class="form-buttons">
        <a asp-action="Edit" asp-route-id="@Model.LabtestID" class="btn">Edit</a>
        <a asp-action="Index" class="link-quiet">Back to list</a>
    </div>
</section>
