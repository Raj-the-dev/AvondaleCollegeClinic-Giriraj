@model AvondaleCollegeClinic.Models.Labtest
@{
    ViewData["Title"] = "Edit Lab Test";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>

    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="LabtestID" />
        <input type="hidden" asp-for="File" />

        <div class="form-row">
            <label asp-for="RecordID" class="form-label"></label>
            <select asp-for="RecordID" class="form-control" asp-items="ViewBag.RecordID"></select>
            <span asp-validation-for="RecordID" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="TestType" class="form-label"></label>
            <input asp-for="TestType" class="form-control" />
            <span asp-validation-for="TestType" class="text-danger"></span>
        </div>

        @if (!string.IsNullOrEmpty(Model.File))
        {
            <div class="form-row">
                <label class="form-label">Current PDF</label>
                <a href="@Model.File" target="_blank" rel="noopener">View current PDF</a>
            </div>
        }

        <div class="form-row">
            <label asp-for="PDFFile" class="form-label">Replace PDF (optional)</label>
            <input asp-for="PDFFile" type="file" accept="application/pdf,.pdf" class="form-control" />
            <span asp-validation-for="PDFFile" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="ResultDate" class="form-label"></label>
            <input asp-for="ResultDate" class="form-control" />
            <span asp-validation-for="ResultDate" class="text-danger"></span>
        </div>

        <div class="form-buttons">
            <button type="submit" class="btn">Save</button>
            <a asp-action="Index" class="link-quiet">Back to list</a>
        </div>
    </form>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
