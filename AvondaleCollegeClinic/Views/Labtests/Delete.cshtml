@model AvondaleCollegeClinic.Models.Labtest
@{
    ViewData["Title"] = "Delete Lab Test";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>
    <p class="muted">Are you sure you want to delete this lab test?</p>

    <dl class="desc-list" style="margin-top:12px">
        <dt>@Html.DisplayNameFor(m => m.TestType)</dt>
        <dd>@Html.DisplayFor(m => m.TestType)</dd>

        <dt>Report</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.File))
            {
                <a href="@Model.File" target="_blank" rel="noopener">Open PDF</a>
            }
            else
            {
                <span class="muted">No PDF</span>
            }
        </dd>

        <dt>@Html.DisplayNameFor(m => m.ResultDate)</dt>
        <dd>@Html.DisplayFor(m => m.ResultDate)</dd>

        <dt>Medical Record</dt>
        <dd>@Model.MedicalRecord?.MedicalRecordID</dd>
    </dl>

    <form asp-action="Delete" method="post" class="form-buttons">
        <input type="hidden" asp-for="LabtestID" />
        <button type="submit" class="btn">Delete</button>
        <a asp-action="Index" class="link-quiet">Cancel</a>
    </form>
</section>
