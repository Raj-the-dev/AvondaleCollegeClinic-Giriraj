@model AvondaleCollegeClinic.Models.MedicalRecord
@{
    ViewData["Title"] = "Medical Record Details";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>

    <dl class="desc-list">
        <dt>@Html.DisplayNameFor(m => m.Notes)</dt>
        <dd>@Html.DisplayFor(m => m.Notes)</dd>

        <dt>@Html.DisplayNameFor(m => m.Date)</dt>
        <dd>@Html.DisplayFor(m => m.Date)</dd>

        <dt>Student</dt>
        <dd>@(Model.Student != null ? (Model.Student.FirstName + " " + Model.Student.LastName) : Model.StudentID)</dd>

        <dt>Doctor</dt>
        <dd>@(Model.Doctor != null ? (Model.Doctor.FirstName + " " + Model.Doctor.LastName) : Model.DoctorID)</dd>
    </dl>

    <div class="form-buttons">
        <a asp-action="Edit" asp-route-id="@Model.MedicalRecordID" class="btn">Edit</a>
        <a asp-action="Index" class="link-quiet">Back to list</a>
    </div>
</section>
