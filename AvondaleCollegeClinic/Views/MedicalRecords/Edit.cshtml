@model AvondaleCollegeClinic.Models.MedicalRecord
@{
    ViewData["Title"] = "Edit Medical Record";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>

    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

    <form asp-action="Edit">
        <input type="hidden" asp-for="MedicalRecordID" />

        <div class="form-row">
            <label asp-for="StudentID" class="form-label"></label>
            <select asp-for="StudentID" class="form-control" asp-items="ViewBag.StudentID"></select>
            <span asp-validation-for="StudentID" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="DoctorID" class="form-label"></label>
            <select asp-for="DoctorID" class="form-control" asp-items="ViewBag.DoctorID"></select>
            <span asp-validation-for="DoctorID" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="Notes" class="form-label"></label>
            <input asp-for="Notes" class="form-control" required maxlength="200"/>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        @{
            var today = DateTime.Today.ToString("yyyy-MM-dd");
        }
        <input asp-for="Date" class="form-control" type="date" max="@today" required/>


        <div class="form-buttons">
            <button type="submit" class="btn">Save</button>
            <a asp-action="Index" class="link-quiet">Back to list</a>
        </div>
    </form>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
