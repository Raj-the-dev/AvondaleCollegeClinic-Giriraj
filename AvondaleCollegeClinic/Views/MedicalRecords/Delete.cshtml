@model AvondaleCollegeClinic.Models.MedicalRecord
@{
    ViewData["Title"] = "Delete Medical Record";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>
    <p class="muted">Are you sure you want to delete this record?</p>

    <dl class="desc-list" style="margin-top:12px">
        <dt>@Html.DisplayNameFor(m => m.Notes)</dt>
        <dd>@Html.DisplayFor(m => m.Notes)</dd>

        <dt>@Html.DisplayNameFor(m => m.Date)</dt>
        <dd>@Html.DisplayFor(m => m.Date)</dd>

        <dt>Student</dt>
        <dd>@(Model.Student != null ? Model.Student.StudentID : Model.StudentID)</dd>

        <dt>Doctor</dt>
        <dd>@(Model.Doctor != null ? Model.Doctor.DoctorID : Model.DoctorID)</dd>
    </dl>

    <form asp-action="Delete" method="post" class="form-buttons">
        <input type="hidden" asp-for="MedicalRecordID" />
        <button type="submit" class="btn">Delete</button>
        <a asp-action="Index" class="link-quiet">Cancel</a>
    </form>
</section>
