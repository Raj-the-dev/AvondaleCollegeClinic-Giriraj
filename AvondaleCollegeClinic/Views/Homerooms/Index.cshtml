@model IEnumerable<AvondaleCollegeClinic.Models.Homeroom>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.YearLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Block)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @((int)item.YearLevel)
            </td>
            <td>
                @Html.DisplayFor(_ => item.Block)
            </td>
            <td>
                @((int)item.ClassNumber)
            </td>
            <td>
                @(item.Teacher != null ? item.Teacher.FirstName + " " + item.Teacher.LastName : item.TeacherID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HomeroomID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HomeroomID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HomeroomID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
