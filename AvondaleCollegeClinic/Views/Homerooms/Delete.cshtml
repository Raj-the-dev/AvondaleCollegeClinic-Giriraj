@model AvondaleCollegeClinic.Models.Homeroom
@{
    ViewData["Title"] = "Delete Homeroom";
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>
    <p class="muted">Are you sure you want to delete this homeroom?</p>

    <dl class="desc-list" style="margin-top:12px">
        <dt>@Html.DisplayNameFor(m => m.YearLevel)</dt>
        <dd>@((int)Model.YearLevel)</dd>

        <dt>@Html.DisplayNameFor(m => m.Block)</dt>
        <dd>@Html.DisplayFor(_ => Model.Block)</dd>

        <dt>@Html.DisplayNameFor(m => m.ClassNumber)</dt>
        <dd>@((int)Model.ClassNumber)</dd>

        <dt>Teacher</dt>
        <dd>@(Model.Teacher != null ? (Model.Teacher.FirstName + " " + Model.Teacher.LastName) : Model.TeacherID)</dd>
    </dl>

    <form asp-action="Delete" method="post" class="form-buttons">
        <input type="hidden" asp-for="HomeroomID" />
        <button type="submit" class="btn">Delete</button>
        <a asp-action="Index" class="link-quiet">Cancel</a>
    </form>
</section>