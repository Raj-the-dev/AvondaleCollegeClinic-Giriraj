@model AvondaleCollegeClinic.Models.Homeroom
@using Microsoft.AspNetCore.Mvc.Rendering
@using AvondaleCollegeClinic.Models

@{
    ViewData["Title"] = "Edit";

    var yearOptions = Enum.GetValues(typeof(YearLevel)).Cast<YearLevel>()
        .Select(y => new SelectListItem
                {
                    Value = ((int)y).ToString(),
                    Text = ((int)y).ToString(),
                    Selected = y == Model.YearLevel
                });

    var classOptions = Enum.GetValues(typeof(ClassNumber)).Cast<ClassNumber>()
        .Select(c => new SelectListItem
                {
                    Value = ((int)c).ToString(),
                    Text = ((int)c).ToString(),
                    Selected = c == Model.ClassNumber
                });
}

<h1>Edit</h1>

<h4>Homeroom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HomeroomID" />

            <div class="form-group">
                <label asp-for="YearLevel" class="control-label"></label>
                <select asp-for="YearLevel" class="form-control" asp-items="yearOptions"></select>
                <span asp-validation-for="YearLevel" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TeacherID" class="control-label"></label>
                <select asp-for="TeacherID" class="form-control" asp-items="ViewBag.TeacherID"></select>
                <span asp-validation-for="TeacherID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Block" class="control-label"></label>
                <select asp-for="Block" class="form-control" asp-items="Html.GetEnumSelectList<Block>()"></select>
                <span asp-validation-for="Block" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ClassNumber" class="control-label"></label>
                <select asp-for="ClassNumber" class="form-control" asp-items="classOptions"></select>
                <span asp-validation-for="ClassNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
