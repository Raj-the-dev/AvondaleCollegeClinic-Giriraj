@model AvondaleCollegeClinic.Models.Homeroom
@using Microsoft.AspNetCore.Mvc.Rendering
@using AvondaleCollegeClinic.Models

@{
    ViewData["Title"] = "Edit Homeroom";

    var yearOptions = Enum.GetValues(typeof(YearLevel)).Cast<YearLevel>()
        .Select(y => new SelectListItem { Value = ((int)y).ToString(), Text = ((int)y).ToString(), Selected = y == Model.YearLevel });

    var classOptions = Enum.GetValues(typeof(ClassNumber)).Cast<ClassNumber>()
        .Select(c => new SelectListItem { Value = ((int)c).ToString(), Text = ((int)c).ToString(), Selected = c == Model.ClassNumber });
}
<section class="wrap page">
    <h1>@ViewData["Title"]</h1>

    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

    <form asp-action="Edit">
        <input type="hidden" asp-for="HomeroomID" />

        <div class="form-row">
            <label asp-for="YearLevel" class="form-label"></label>
            <select asp-for="YearLevel" class="form-control" asp-items="yearOptions"></select>
            <span asp-validation-for="YearLevel" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="TeacherID" class="form-label"></label>
            <select asp-for="TeacherID" class="form-control" asp-items="ViewBag.TeacherID"></select>
            <span asp-validation-for="TeacherID" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="Block" class="form-label"></label>
            <select asp-for="Block" class="form-control" asp-items="Html.GetEnumSelectList<Block>()"></select>
            <span asp-validation-for="Block" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label asp-for="ClassNumber" class="form-label"></label>
            <select asp-for="ClassNumber" class="form-control" asp-items="classOptions"></select>
            <span asp-validation-for="ClassNumber" class="text-danger"></span>
        </div>

        <div class="form-buttons">
            <button type="submit" class="btn">Save</button>
            <a asp-action="Index" class="link-quiet">Back to list</a>
        </div>
    </form>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}