@page
@model AvondaleCollegeClinic.Areas.Identity.Pages.Account.FirstTimeModel
@{
    ViewData["Title"] = "First-time setup";
}
<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<title>First-time — Avondale College Clinic</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>


<main>
  <div class="wrap">
    <div class="eyebrow">First-time setup</div>
    <h1>Create your access</h1>

    <div asp-validation-summary="ModelOnly" class="error-summary" role="alert"></div>

    <form method="post" class="auth">
      <div class="form-row">
        <label asp-for="Input.Identifier">Your school ID</label>
        <input asp-for="Input.Identifier" class="input-line" autocomplete="username" />
        <span asp-validation-for="Input.Identifier" class="error-summary"></span>
      </div>

      <div class="form-row">
        <label asp-for="Input.Password">Password</label>
        <input asp-for="Input.Password" class="input-line" autocomplete="new-password" type="password" />
        <div class="hint">Min 8 chars with upper, lower & a number.</div>
        <span asp-validation-for="Input.Password" class="error-summary"></span>
      </div>

      <div class="form-row">
        <label asp-for="Input.ConfirmPassword">Confirm password</label>
        <input asp-for="Input.ConfirmPassword" class="input-line" autocomplete="new-password" type="password" />
        <span asp-validation-for="Input.ConfirmPassword" class="error-summary"></span>
      </div>

      <div class="form-row">
        <label asp-for="Input.CityOfBirth">Keyword (city you were born in)</label>
        <input asp-for="Input.CityOfBirth" class="input-line" />
        <span asp-validation-for="Input.CityOfBirth" class="error-summary"></span>
      </div>

      <div class="form-row">
        <button type="submit" class="btn">Create account</button>
      </div>

      <div class="muted" style="margin-top:14px">
        Already set up? <a href="/Identity/Account/Login">Sign in</a>
      </div>
    </form>
  </div>
</main>

<script src="~/js/site.js"></script>
</body>
</html>

