@page
@model AvondaleCollegeClinic.Areas.Identity.Pages.Account.Manage.SetNewPasswordModel
@{
    ViewData["Title"] = "Set new password";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Set new password — Avondale College Clinic</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <main>
        <div class="wrap">
            <div class="eyebrow">Account</div>
            <h2>Set your new password</h2>

            <div asp-validation-summary="ModelOnly" class="error-summary" role="alert"></div>

            <form method="post" class="auth">
                <div class="form-row">
                    <label asp-for="Input.NewPassword">New password</label>
                    <input asp-for="Input.NewPassword"
                           class="input-line"
                           type="password"
                           autocomplete="new-password" />
                    <div class="hint">Min 8 chars with upper, lower & a number.</div>
                    <span asp-validation-for="Input.NewPassword" class="error-summary"></span>
                </div>

                <div class="form-row">
                    <label asp-for="Input.ConfirmPassword">Confirm new password</label>
                    <input asp-for="Input.ConfirmPassword"
                           class="input-line"
                           type="password"
                           autocomplete="new-password" />
                    <span asp-validation-for="Input.ConfirmPassword" class="error-summary"></span>
                </div>

                <div class="form-row">
                    <button type="submit" class="btn">Save password</button>
                    <a href="/" class="link-quiet" style="margin-left:12px">Home</a>
                </div>
            </form>
        </div>
    </main>

    <script src="~/js/site.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
