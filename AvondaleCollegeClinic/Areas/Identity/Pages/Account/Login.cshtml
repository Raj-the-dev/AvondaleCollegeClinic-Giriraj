@page
@model AvondaleCollegeClinic.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}
<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<title>Login — Avondale College Clinic</title>
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>


<main>
  <div class="wrap">
    <div class="eyebrow">Secure access</div>
    <h1>Sign in</h1>

    <div asp-validation-summary="ModelOnly" class="error-summary" role="alert"></div>

    <form method="post" class="auth">
      <div class="form-row">
        <label asp-for="Input.Identifier">Email or ID</label>
        <input asp-for="Input.Identifier" class="input-line" autocomplete="username" />
        <span asp-validation-for="Input.Identifier" class="error-summary"></span>
      </div>

      <div class="form-row">
        <label asp-for="Input.Password">Password</label>
        <input asp-for="Input.Password" class="input-line" autocomplete="current-password" type="password" />
        <span asp-validation-for="Input.Password" class="error-summary"></span>
      </div>

      <div class="form-row">
        <button type="submit" class="btn">Login</button>
      </div>

      <div class="links muted">
        <a href="/Identity/Account/FirstTime">First-time setup</a>
        <a href="/Identity/Account/KeywordLogin">Forgot? Use keyword</a>
        <a href="/">Back to home</a>
      </div>
    </form>
  </div>
</main>

    <script src="~/js/site.js"></script>
</body>
</html>
