@page
@model AvondaleCollegeClinic.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    var adminMode = (bool)(ViewData["AdminMode"] ?? false);
}

<h1>Login</h1>

<div class="row">
    <div class="col-md-5">
        <form method="post">
            <input type="hidden" asp-for="AdminMode" />
            <h4>@(adminMode ? "Admin Login" : "User Login")</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            @if (!adminMode)
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.Identifier" class="form-control" placeholder="StudentID / TeacherID / DoctorID / CaregiverID or Email" />
                    <label asp-for="Input.Identifier">ID or Email</label>
                    <span asp-validation-for="Input.Identifier" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password (leave empty if first time)" />
                    <label asp-for="Input.Password">Password (optional if first time)</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.EmailForFirstTime" class="form-control" placeholder="Email (first-time claim)" />
                    <label asp-for="Input.EmailForFirstTime">Email (first-time claim)</label>
                    <span asp-validation-for="Input.EmailForFirstTime" class="text-danger"></span>

                </div>

            }
            else
            {
                <div class="form-floating mb-3">
                    <input asp-for="Input.AdminEmail" class="form-control" autocomplete="username" placeholder="admin@avondaleclinic.com" />
                    <label asp-for="Input.AdminEmail">Admin Email</label>
                    <span asp-validation-for="Input.AdminEmail" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            }

            <button type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
        </form>

        <div class="mt-3 text-muted">
            @if (!adminMode)
            {
                <small>Are you the admin? <a asp-page="./Login" asp-route-admin="1">Admin login</a></small>
            }
            else
            {
                <small><a asp-page="./Login">Back to user login</a></small>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
