@page
@model AvondaleCollegeClinic.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>
<div class="row">
    <div class="col-md-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Identifier" class="form-control" placeholder="Email or ID" />
                <label asp-for="Input.Identifier"></label>
                <span asp-validation-for="Input.Identifier" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button class="w-100 btn btn-primary" type="submit">Login</button>
        </form>

        <div class="mt-3 small">
            <a asp-page="./FirstTime">First-time setup</a> ·
            <a asp-page="./KeywordLogin">Use keyword instead</a> ·
            <a asp-page="./Login" asp-route-admin="1">Admin login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
