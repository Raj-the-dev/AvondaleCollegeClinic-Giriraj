@page
@model AvondaleCollegeClinic.Areas.Identity.Pages.Account.KeywordLoginModel
@{
    ViewData["Title"] = "Keyword login";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Keyword login — Avondale College Clinic</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>


    <main>
        <div class="wrap">
            <div class="eyebrow">Password-free access</div>
            <h1>Keyword login</h1>

            <div asp-validation-summary="ModelOnly" class="error-summary" role="alert"></div>

            <form method="post" class="auth">
                <div class="form-row">
                    <label asp-for="Input.Identifier">Email or ID</label>
                    <input asp-for="Input.Identifier" class="input-line" autocomplete="username" />
                    <span asp-validation-for="Input.Identifier" class="error-summary"></span>
                </div>

                <div class="form-row">
                    <label asp-for="Input.Keyword">City you were born in</label>
                    <input asp-for="Input.Keyword" class="input-line" />
                    <span asp-validation-for="Input.Keyword" class="error-summary"></span>
                </div>

                <div class="form-row">
                    <button type="submit" class="btn">Verify & Continue</button>
                </div>

                <div class="muted" style="margin-top:14px">
                    Prefer password? <a href="/Identity/Account/Login">Back to login</a>
                </div>
            </form>
        </div>
    </main>

    <script src="~/js/site.js"></script>
</body>
</html>